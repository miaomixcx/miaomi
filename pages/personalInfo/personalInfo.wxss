page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #FAFAFA
}
.top{
  width: 100%;
  height: 714rpx;

}
.bg{
  width: 100%;
  height: 236rpx;
}
.main{
  width: 630rpx;
  height: 354rpx;
 
  padding: 240rpx 30rpx 0 30rpx;
  background: #fff;
  position: fixed;
  top: 120rpx;
  left: 30rpx;
  box-shadow:0rpx 8rpx 16rpx 0rpx rgba(0,0,0,0.09);
  border-radius:8rpx;
}
.main_center{
  width: 100%;
  height:100%
}

.main-center>view{
  width: 628rpx;
  height: 88rpx;
  margin-left: 2rpx;
  border-bottom: 2rpx solid #f1f1f1;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between
}
.main-center>.tx{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background: pink;position: absolute;
  left: 264rpx;
  top: -80rpx;
}
.main-center>view>label{
  font-size: 28rpx;
  color: #353535;
  width: 156rpx;
  font-weight: 600;
  margin-right: 30rpx
}
.main-center>view>input{
  width: 100%;
  height: 86rpx;
  color: #9e9e9e;
  font-size: 28rpx;
}
.main-center>view>view{
  width: 100%;
}
.main-center>view:nth-child(3)>image{
  width: 16rpx;
  height: 26rpx;
  margin-top: 32rpx
}
.main-center>view:last-child{
  border-bottom: none
}
