/* pages/writeAddress/writeAddress.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #FAFAFA
}
.main-center{
  width: 750rpx;
  height: 100%;
  background: #fff
}
.main-center>view{
  width: 690rpx;
  height: 86rpx;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #dcdcdc;
  line-height: 86rpx;
  display: flex;
  justify-content: space-between
}
.main-center>view>label{
  font-size: 28rpx;
  color: #353535;
  width: 156rpx;
  font-weight: 600;
  margin-right: 30rpx
}
.main-center>view>input{
  width: 100%;
  height: 86rpx;
  color: #9e9e9e;
  font-size: 28rpx;
}
.main-center>view:nth-child(3)>image{
  width: 16rpx;
  height: 26rpx;
  margin-top: 32rpx
}
.main-center>view:last-child{
  border-bottom: none
}
.picker{
  font-size: 28rpx;
  position: absolute;
  left: 178rpx;
}
.set{
  width: 100%;
  height: 88rpx;
  background: #fff;
  margin-top: 20rpx
}
.address{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(53,53,53,1);
  line-height:88rpx;
  margin-left: 30rpx;
}
.qiehuan{
  float: right;

  margin-right: 30rpx;
  margin-top: 24rpx;

}
.sliderContent{
  position: relative;
  margin: 0 auto;
  width: 66rpx;
  box-sizing: border-box;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  background-color: #FC4A4B;
}
.slider{
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  background: #fff;
  position: absolute;
  left: 6rpx;
  top: 6rpx;
}
