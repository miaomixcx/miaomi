/* pages/market/market.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #F8F8F8
}
.header{
  width: 100%;
  height: 88rpx;
  background: #fff;
}
.search{
  width: 690rpx;
  height: 56rpx;
  background: #F5F5F5;
  margin-left: 30rpx;
  margin-top: 16rpx;  
  border-radius:28rpx;
}
.chazhao{
  width: 28rpx;
  height: 28rpx;
  margin-left: 30rpx;
  float: left;
  margin-top: 14rpx;
  margin-right: 12rpx;
}
.sousuo{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(178,178,178,1);
  line-height:56px; 
  float: left
}
.cancle{
  width: 32rpx;
  height: 32rpx;
  float: right;
  margin-right: 12rpx;
  margin-top: 12rpx;
}
.navbar{
  height: 80rpx;
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  width: 140rpx;
  padding-top: 8rpx;
  font-size: 28rpx;
  line-height: 30rpx;
  position: relative;
  text-align: center;
  color: #999;
  flex-shrink: 0;
  background: #fff
}
.eng{
  font-size: 20rpx
}
.mark{
  width: 100rpx;
  height: 4rpx;
  position: absolute;
  background: #FF4C4D;
  bottom: 0;
  left: 20rpx;
  display: none;
}
.navbar .item.active{
  color: #FF4C4D;
}
.navbar .item.active .mark{
  display: block;
}
.nav{
  width: 100%;
  padding: 16rpx 0 16rpx 0rpx;
  background: #F7F7F7;
  position: fixed;
}
.nav>text:first-child{
  margin-left: 20rpx;
}
.nav>text {
  height: 56rpx;
  background: #FFFFFF;
  border-radius: 100rpx;
  font-size: 26rpx;
  line-height: 56rpx;
  text-align: center;
  color: #999999;
  padding: 0 20rpx;
  margin-right: 20rpx
}
.nav>text.active {

  color: #FF4C4D;
}
.listOfPicAndText{
  width: 340rpx;
  height: 410rpx;
  background: #F1F1F1;
  padding-top: 20rpx;
  position: relative;
  float: left;
}
.listOfPicAndText:nth-child(1){
  margin-left: 30rpx
}
.listOfPicAndText:nth-child(2){
  margin-left: 10rpx
}
.listOfPicAndText:nth-child(3){
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.listOfPicAndText:nth-child(4){
  margin-left: 10rpx;
  margin-top: 10rpx
}
.picture{
  width: 220rpx;
  height: 220rpx;
  background: orange;
  margin-left: 60rpx;
}
.tx1{
  display: block;
  margin-top: 4rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: 600;
  color:rgba(53,53,53,1);
  margin-left: 20rpx;
}
.tx2{
  display: block;
  margin-top: 2rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  font-weight: 400;
  color:rgba(153,153,153,1);
  margin-left: 20rpx;
}
.tx3{
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  font-weight: 500;
  color:#000000;
  margin-left: 20rpx;

}
.tx4{
  display: block;
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: 400;
  color:#FF3B30;
  margin-left: 15rpx;
  margin-top: 8rpx;
}
.vipPrice{
  width: 60rpx;
  height: 24rpx;
  border-radius: 14rpx;
  border: 1rpx solid rgba(255,76,77,1);
  font-size: 16rpx;
  line-height: 24rpx;
  text-align: center;
  color: #ff4c4d;
  position: absolute;
  left: 124rpx;
  top: 380rpx;
}

.add{
  width: 40rpx;
  height: 40rpx;
