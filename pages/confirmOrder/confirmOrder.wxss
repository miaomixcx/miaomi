/* pages/confirmOrder/confirmOrder.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #FAFAFA
}
.header{
  width: 100%;
  height: 122rpx;
  background: #fff;
  padding-top: 30rpx
}
.storeName{
  display: block;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #353535;
  margin-left: 30rpx;
}
.info{
  display: block;
  height:36rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(53,53,53,1);
  line-height:36rpx;
  margin-left: 30rpx;
  margin-top: 6rpx;
}
.header_right{
  width: 16rpx;
  height: 26rpx;
  position: absolute;
  top: 64rpx;
  right: 30rpx
}
.type{
  width: 100%;
  height: 216rpx;
  background: #fff;

}
.ziti{
  width:336rpx;
  height:106rpx;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  border:1rpx solid rgba(255,76,77,1);
  margin-left: 30rpx;
  margin-top: 32rpx;
  text-align: center;
  float: left
}
.ziti>text{
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,76,77,1);
  line-height:106rpx;
}
.gou{
  width: 44rpx;
  height: 44rpx;
  float: right;
}
.jisu{
  width:336rpx;
  height:106rpx;
  border-radius:8rpx;
  opacity:0.99;
  border:1rpx solid rgba(178,178,178,1);
  margin-left: 18rpx;
  margin-top: 32rpx;
  text-align: center;
  float: left
}
.jisu>text{
  font-size:28rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(53,53,53,1);
  line-height:106rpx;
}
.attention{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  margin-left: 30rpx;
  margin-top: 22rpx;
  float: left
}